.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  overflow-y: auto;
}

.search-header {
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #fff;
  padding: 10px 15px;
  display: flex;
  align-items: center;
}

.search-bar {
  display: flex;
  align-items: center;
  flex: 1;
  height: 36px;
  background-color: #f5f5f5;
  border-radius: 18px;
  padding: 0 12px;
}

.search-input {
  flex: 1;
  height: 100%;
  margin-left: 8px;
}

.clear-icon {
  padding: 5px;
}

.search-btn {
  margin-left: 10px;
  color: #007aff;
  font-size: 14px;
}

.filter-bar {
  display: flex;
  background-color: #fff;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
  position: sticky;
  top: 56px;
  z-index: 51;
}

.filter-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  color: #333;
  position: relative;
}

.filter-item.active {
  color: #007aff;
}

.arrow {
  width: 0;
  height: 0;
  margin-left: 5px;
  border-left: 4px solid transparent;
  border-right: 4px solid transparent;
}

.arrow.down {
  border-top: 4px solid #999;
  border-bottom: 0;
}

.arrow.up {
  border-bottom: 4px solid #007aff;
  border-top: 0;
}

.filter-panel {
  position: absolute;
  top: 96px;
  left: 0;
  right: 0;
  background-color: #fff;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  z-index: 52;
  max-height: 60vh;
  overflow-y: auto;
}

.filter-scroll {
  display: flex;
  flex-wrap: wrap;
  padding: 10px 15px;
  max-height: 60vh;
  overflow-y: auto;
}

.category-item {
  width: 25%;
  height: 30px;
  line-height: 30px;
  text-align: center;
  font-size: 14px;
  margin-bottom: 10px;
}

.category-item.active {
  color: #007aff;
  font-weight: bold;
}

.price-range {
  display: flex;
  align-items: center;
  padding: 15px;
  flex-wrap: wrap;
}

.price-input {
  flex: 1;
  height: 36px;
  background-color: #f5f5f5;
  border-radius: 4px;
  padding: 0 15px;
  font-size: 14px;
  min-width: 80px;
  text-align: center;
}

.price-separator {
  margin: 0 15px;
  color: #999;
}

.confirm-btn {
  width: 100%;
  margin-top: 15px;
  height: 36px;
  line-height: 36px;
  font-size: 14px;
  background-color: #007aff;
  color: #fff;
  border-radius: 4px;
  text-align: center;
}

.search-results {
  flex: 1;
  padding-bottom: 20px;
  margin-top: 0;
}

.search-results.has-filter {
  padding-top: 0;
  margin-top: 0;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100px;
}

.loading {
  width: 24px;
  height: 24px;
  border: 2px solid #f3f3f3;
  border-top: 2px solid #ff5401;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200px;
}

.empty-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 10px;
}

.goods-list {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 340rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods-image {
  width: 100%;
  height: 340rpx;
}

.goods-info {
  padding: 12rpx;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.3;
}

.goods-price {
  font-size: 32rpx;
  color: #ff0000;
  font-weight: bold;
  margin-top: 8rpx;
}

.seller-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.seller-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 4rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #666;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.history-section {
  background-color: #fff;
  padding: 15px;
  margin-top: 10px;
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15px;
}

.history-title {
  font-size: 14px;
  color: #333;
  font-weight: bold;
}

.clear-history {
  font-size: 14px;
  color: #999;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding: 6px 12px;
  margin-right: 10px;
  margin-bottom: 10px;
}

.history-text {
  font-size: 12px;
  color: #333;
  margin-right: 5px;
}

.history-delete {
  padding: 2px;
}

.empty-history {
  display: flex;
  justify-content: center;
  padding: 20px 0;
  color: #999;
  font-size: 14px;
} 