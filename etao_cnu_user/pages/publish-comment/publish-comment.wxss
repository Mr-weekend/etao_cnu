.container {
  padding-bottom: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  margin-top: 30rpx;
  padding: 12rpx 40rpx;
  background: #1296db;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.comment-form {
  padding: 20rpx;
}

.goods-section, .form-section {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.goods-info {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.goods-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.goods-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
}

.section-title {
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.type-selector {
  padding: 30rpx 20rpx;
  display: flex;
  justify-content: space-around;
}

.type-item {
  width: 160rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  border: 2rpx solid #eee;
  transition: all 0.3s;
}

.type-item.active {
  border-color: #1296db;
  background-color: rgba(18, 150, 219, 0.05);
}

.type-icon {
  font-size: 40rpx;
  margin-bottom: 10rpx;
}

.comment-textarea {
  width: 100%;
  height: 210rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  border: none;
}

.word-count {
  text-align: right;
  padding: 0 20rpx 20rpx;
  font-size: 24rpx;
  color: #999;
}

.image-uploader {
  padding: 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.delete-icon {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.plus {
  font-size: 60rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}

.anonymous-section {
  padding: 20rpx;
}

.anonymous-change {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.anonymous-hint {
  font-size: 24rpx;
  color: #999;
}

.submit-section {
  padding: 40rpx 20rpx;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.submit-btn[disabled] {
  background: #ccc;
  color: #fff;
}