page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  position: relative;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 20px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 20px;
  height: 20px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}

.container {
  min-height: 100%;
  background: #f8f8f8;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

.search-container {
  padding: 10px 15px;
  background-color: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
  margin-bottom: 10px;
  border-bottom: 1px solid #eee;
}

.search-bar {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  height: 36px;
  border-radius: 18px;
  color: #999;
  font-size: 14px;
}

.search-bar icon {
  margin-right: 5px;
}

.search-input-wrap {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
}

.search-input-wrap input {
  flex: 1;
  font-size: 28rpx;
}

.search-placeholder {
  color: #999;
}

.banner {
  height: 300rpx;
  margin: 20rpx 0;
}

.banner image {
  width: 100%;
  height: 100%;
}

.category-scroll {
  width: 100%;
  white-space: nowrap;
  background: #fff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
  border-radius: 10px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
}

.category-list {
  display: flex;
  padding: 0 20rpx;
}

.category-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 25%; /* 一行显示4个 */
  min-width: 140rpx;
  flex-shrink: 0;
  position: relative;
  padding: 10rpx 0;
}

.category-item.selected {
  color: #ff5401;
}

.category-item.selected::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #ff5401;
  border-radius: 2rpx;
}

.category-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-item text {
  font-size: 24rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 120rpx;
}

.category-item.selected text {
  color: #ff5401;
}

.goods-list {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods-item {
  width: 340rpx;
  margin-bottom: 20rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.goods-image {
  width: 100%;
  height: 340rpx;
}

.goods-info {
  padding: 12rpx;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.3;
}

.goods-price {
  font-size: 32rpx;
  color: #ff0000;
  font-weight: bold;
  margin-top: 8rpx;
}

.seller-info {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}

.seller-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 4rpx;
}

.seller-name {
  font-size: 24rpx;
  color: #666;
}

.loading-more, .no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.publish-btn {
  position: fixed;
  right: 30rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: #3290de;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  z-index: 1000;
}

.publish-icon {
  width: 80rpx;
  height: 80rpx;
}

