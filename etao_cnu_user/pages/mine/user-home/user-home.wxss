page {
  background: #f8f8f8;
}

.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.user-header {
  background: #ffffff;
  padding: 10rpx 24rpx;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  border: 1rpx solid #f0f0f0;
}

.info-right {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}


.credit-info {
  display: flex;
  padding: 20rpx 0;
  border-top: 1rpx solid #f5f5f5;
  border-bottom: 1rpx solid #f5f5f5;
  margin-bottom: 30rpx;
}

.credit-item {
  flex: 1;
  text-align: center;
}

.credit-item .label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.credit-item .value {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 6rpx;
  display: block;
}

.credit-item .score {
  font-size: 22rpx;
  color: #666;
  display: block;
}


.count {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 24rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  height: 62rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  color: #666;
  font-size: 28rpx;
}

.tab-item.active {
  color: #333;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.tab-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-label {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-right: 0;
  padding: 0;
}

.tab-badge {
  position: absolute;
  font-size: 22rpx;
  /* background-color: #f0f0f0; */
  color: #666;
  /* border-radius: 16rpx; */
  /* padding: 2rpx 12rpx; */
  height: 32rpx;
  line-height: 32rpx;
  min-width: 16rpx;
  text-align: center;
  top: 14rpx;
  right: 34%;
}

.tab-item.active .tab-label {
  color: #1296db;
  font-weight: bold;
}

.tab-item.active .tab-badge {
  color: #1296db;
}

.goods-list {
  padding: 24rpx;
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.goods-item {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.goods-item.sold {
  opacity: 0.8;
}

.goods-image {
  width: 100%;
  height: 340rpx;
  background: #f5f5f5;
}

.goods-info {
  padding: 16rpx;
}

.goods-description {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
}

.sold-tag {
  position: absolute;
  right: 16rpx;
  top: 16rpx;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.review-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx 24rpx;
  gap: 24rpx;
}

.review-tab {
  padding: 12rpx 32rpx;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
  border-radius: 24rpx;
}

.review-tab.active {
  color: #1296db;
  background: rgba(18, 150, 219, 0.1);
}

.review-items {
  padding: 24rpx;
}

.review-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 4rpx;
}

.review-time {
  font-size: 24rpx;
  color: #999;
}

.review-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-goods {
  display: flex;
  background: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
}

.goods-thumb {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.goods-brief {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-profile {
  display: block;
  font-size: 26rpx;
  color: rgb(78, 75, 74);
  border-radius: 10rpx;
  letter-spacing: 1px;
}

.gender {
  display: inline-block;
  padding: 8rpx 13rpx;
  font-size: 20rpx;
  font-weight: bold;
  color: rgb(78, 75, 74);
  background: #e0dfdf96;
  border-radius: 10rpx;
  letter-spacing: 1px;
}

.brief-title {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.brief-price {
  font-size: 28rpx;
  color: #ff4f4f;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 32rpx;
  color: #999;
  font-size: 26rpx;
}

.empty-tip {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading::before {
  content: '';
  width: 32rpx;
  height: 32rpx;
  margin-right: 12rpx;
  border: 2rpx solid #ddd;
  border-top-color: #999;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
} 