.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: calc(env(safe-area-inset-bottom) + 100rpx);
}

.action-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.action-bar.edit-mode {
  background: #f8f8f8;
}

.edit-btn {
  color: #333;
  font-size: 28rpx;
}

.clear-btn {
  color: #ff4f4f;
  font-size: 28rpx;
}

.history-list {
  margin-top: 88rpx;
  padding: 0 20rpx;
}

.date-header {
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  background: #f8f8f8;
}

.history-item {
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: transform 0.3s ease;
}

.collection-item.swiped {
  transform: translateX(-160rpx);
}

.delete-action {
  position: absolute;
  right: -160rpx;
  top: 0;
  bottom: 0;
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ff4f4f;
  color: #fff;
  font-size: 28rpx;
  transition: right 0.3s ease;
}

.collection-item.swiped .delete-action {
  right: 0;
}

.checkbox {
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
  height: 40rpx;
}

.goods-info {
  flex: 1;
  display: flex;
}

.goods-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-detail {
  flex: 1;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.publisher {
  display: flex;
  align-items: center;
}

.publisher-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.publisher-name {
  font-size: 24rpx;
  color: #666;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.select-all {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.select-all icon {
  margin-right: 10rpx;
}

.batch-delete {
  flex: 1;
  margin-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #ff4f4f;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.batch-delete[disabled] {
  background: #ccc;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.cancel-btn:active {
  transform: scale(0.95);
  opacity: 0.9;
}