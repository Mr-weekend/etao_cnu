.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f8f8f8;
}

.auth-section {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.upload-area {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-placeholder {
  text-align: center;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: #07c160;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.submit-btn[disabled] {
  background: #ccc;
}

.status-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
}

.reject-reason {
  font-size: 28rpx;
  color: #ff4d4f;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: #fff2f0;
  border-radius: 8rpx;
}