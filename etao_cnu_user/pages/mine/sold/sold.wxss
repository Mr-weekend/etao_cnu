.container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: env(safe-area-inset-bottom);
}

.search-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 100;
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  height: 60rpx;
  font-size: 28rpx;
  margin: 0 20rpx;
}

.search-btn {
  font-size: 28rpx;
  color: #1296db;
}

.sold-list {
  padding: 20rpx;
}

.sold-item {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.sold-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.sold-time {
  font-size: 24rpx;
  color: #999;
}

.order-status {
  font-size: 24rpx;
  font-weight: 500;
}

.status-waiting {
  color: #ff9800;
}

.status-completed {
  color: #4caf50;
}

.status-canceled {
  color: #999999;
}

.goods-info {
  display: flex;
  padding: 20rpx;
}

.goods-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-detail {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.goods-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
  margin-top: auto;
}

.buyer-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
}

.buyer-left {
  display: flex;
  align-items: center;
}

.buyer-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}

.buyer-name {
  font-size: 24rpx;
  color: #666;
}

.action-btns {
  display: flex;
  gap: 20rpx;
}

.contact-btn, .review-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
}

.contact-btn {
  color: #1296db;
  border: 1rpx solid #1296db;
}

.review-btn {
  color: #ff4f4f;
  border: 1rpx solid #ff4f4f;
}

.review-btn.reviewed {
  color: #999;
  border-color: #ddd;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  padding: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  gap: 20rpx;
}

.action-btn {
  min-width: 160rpx;
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  margin: 0;
  border-radius: 30rpx;
  line-height: 1.8;
}

.detail-btn {
  color: #666;
  background: #f5f5f5;
}

.review-info {
  padding: 20rpx;
  background: #f8f8f8;
  margin: 0 20rpx 20rpx;
  border-radius: 8rpx;
}

.review-item {
  margin-bottom: 10rpx;
}

.review-label {
  font-size: 24rpx;
  color: #666;
}

.review-content {
  font-size: 24rpx;
  color: #333;
}

.review-time {
  font-size: 22rpx;
  color: #999;
  display: block;
  text-align: right;
  margin-top: 10rpx;
}

.loading, .no-more, .empty {
  text-align: center;
  padding: 30rpx;
  color: #999;
  font-size: 24rpx;
} 