.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f8f8f8;
  box-sizing: border-box;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.header {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.back {
  padding: 10rpx;
}

.user-info {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: bold;
}

.goods-info {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.goods-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.goods-detail {
  flex: 1;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
}

.buy-btn {
  margin: 20rpx 0;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 26rpx;
  color: #fff;
  background: #ff4f4f;
  border-radius: 30rpx;
}

.load-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 24rpx;
}

.messages {
  flex: 1;
  padding: 0;
  overflow-y: auto;
  width: 100%;
  box-sizing: border-box;
}

.message-time {
  text-align: center;
  margin: 20rpx 0;
}

.message-time text {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #999;
  background: rgba(0, 0, 0, 0.1);
  border-radius: 10rpx;
}

.message-wrapper {
  display: flex;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  width: 100%;
}

.message-wrapper.self {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  flex-shrink: 0;
  background-color: #f0f0f0;
}

.message-bubble {
  max-width: 60%;
  margin: 0 20rpx;
}

.text-message {
  display: inline-block;
  padding: 16rpx 24rpx;
  background: #fff;
  border-radius: 18rpx;
  font-size: 28rpx;
  color: #333;
  word-break: break-word;
  line-height: 1.5;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.self .text-message {
  background: #1296db;
  color: #fff;
}

.image-message {
  max-width: 400rpx;
  max-height: 600rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.input-area {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
  align-items: center;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.input-container {
  flex: 1;
  margin-right: 20rpx;
}

.input-area input {
  width: 100%;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.action-btn {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
}

.action-btn image {
  width: 48rpx;
  height: 48rpx;
}

.send-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #cccccc;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
}

.send-btn.active {
  background: #1296db;
} 