.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.form-item {
  background: #fff;
  padding: 10rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.description-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.5;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  padding: 10rpx 20rpx;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  padding: 10rpx;
}

.image-item {
  position: relative;
  width: 210rpx;
  height: 210rpx;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.remove-icon {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 50%;
}

.add-image {
  width: 210rpx;
  height: 210rpx;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 8rpx;
  color: #999;
  font-size: 24rpx;
}

.plus{
  font-size: 60rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}

.add-picture-icon {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
}

.add-image-text {
  margin-left: 10rpx;
}

.image-count {
  font-size: 20rpx;
  color: #999;
  margin-top: 6rpx;
}

.price-input {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.price-wrapper {
  display: flex;
  align-items: center;
}

.price-label {
  font-size: 32rpx;
  color: #333;
  min-width: 100rpx;
}

.input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
}

.currency-symbol {
  font-size: 36rpx;
  color: #ff5401;
  font-weight: bold;
  margin-right: 8rpx;
  line-height: 1;
}

.price-input input {
  flex: 1;
  font-size: 32rpx;
  height: 60rpx;
  min-height: 60rpx;
  line-height: 60rpx;
  color: #333;
}

.price-placeholder {
  color: #999;
  font-size: 32rpx;
}

.submit-btn {
  margin-top: 40rpx;
  background: #1296db;
  color: #fff;
  font-size: 32rpx;
  border-radius: 8rpx;
}

.submit-btn.disabled {
  opacity: 0.6;
}

.picker {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  background-color: #f8f8f8;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #333;
}

.picker.placeholder {
  color: #999;
}