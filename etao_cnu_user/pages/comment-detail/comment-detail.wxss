.container {
  padding-bottom: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.error-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.back-btn {
  margin-top: 30rpx;
  padding: 12rpx 40rpx;
  background: #1296db;
  color: #fff;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.goods-section, .comment-section {
  background: #fff;
  border-radius: 12rpx;
  margin: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  padding: 20rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  margin-right: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  font-size: 32rpx;
  color: #ff4f4f;
  font-weight: bold;
}
.goods-image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.comment-content {
  padding: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  justify-content: space-between;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

.right-container {
  display: flex;
  padding: 10rpx 15rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  text-align:center;
  background: rgba(153, 204, 255, 0.4);
  align-items: center;
  letter-spacing: 1rpx;
  margin-left: 20rpx;
}

.right-text {
  font-size: 21rpx;
  color: #555555;
}
.goods-info {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.complete-time-container {
  padding: 0 20rpx 20rpx;
  border-top: 1rpx solid #f5f5f5;
  margin-top: 10rpx;
}

.complete-time {
  font-size: 24rpx;
  color: #999;
}

.comment-type {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.tag-container {
  display: inline-block;
  vertical-align: middle;
}

.type-tag {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 64rpx;
  height: 40rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  font-weight: normal;
  border: 1px solid transparent;
}

.type-tag.positive {
  color: #07C160;
  border-color: #07C160;
  background: rgba(7, 193, 96, 0.1);
}

.type-tag.negative {
  color: #FA5151;
  border-color: #FA5151;
  background: rgba(250, 81, 81, 0.1);
}

.comment-time {
  margin-left: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 16rpx;
}

.comment-images {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-item {
  width: calc(33.33% - 20rpx);
  margin: 10rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 180rpx;
  background-color: #f5f5f5;
}

.no-comment {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  color: #999;
  font-size: 28rpx;
}

.no-comment-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}